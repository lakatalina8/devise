<h1>Listing graphics</h1>

<table>
  <tr>
    <th>Gallery</th>

    <th>Photo</th>
  </tr>

<% @graphics.each do |graphic| %>
  <tr>
    <td><%= graphic.gallery_id %></td>
    <td><%= image_tag graphic.photo.url(:small) %></td>
    <td><%= link_to 'Show', graphic %></td>
    <td><%= link_to 'Edit', edit_graphic_path(graphic) %></td>
    <td><%= link_to 'Destroy', graphic, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Graphic', new_graphic_path %>
