<h1>Listing texts</h1>

<table>
  <tr>
    <th>Context element</th>
    <th>Text data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @texts.each do |text| %>
  <tr>
    <td><%= text.context_element_id %></td>
    <td><%= text.text_data %></td>
    <td> &nbsp;<%= link_to 'Show', text %></td>
    <td><%= link_to 'Edit', edit_text_path(text) %></td>
    <td><%= link_to 'Destroy', text, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

